pipeline {

    tools { 
      go '1.24.2'
     }

         agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
    - name: kaniko
      image: gcr.io/kaniko-project/executor:latest
      command:
        - busybox/cat
      tty: true
      volumeMounts:
        - name: kaniko-secret
          mountPath: /kaniko/.docker
  volumes:
    - name: kaniko-secret
      secret:
        secretName: regcred
        items:
          - key: .dockerconfigjson
            path: config.json
"""
            defaultContainer 'kaniko'
        }
    }

      stages {
            stage('Kaniko Build & Push Image') {
                  steps {
                        container('kaniko') {
                              script {
                                    sh '''
                                    /kaniko/executor --dockerfile `pwd`.devops/docker/Dockerfile.content-service \
                                                --context `pwd` \
                                                --destination=cms-content-service:${BUILD_NUMBER}
                                    '''
                              }
                        }
                  }
            }
      }
}